RUN apt-get -y update && apt-get -y install \
  git \
  libicu52 \
  openssh-server

RUN curl -LJO https://github.com/PowerShell/PowerShell/releases/download/v7.2.6/powershell-lts_7.2.6-1.deb_amd64.deb
RUN dpkg -i powershell-lts_7.2.6-1.deb_amd64.deb
